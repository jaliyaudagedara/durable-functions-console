@page "/"
@using System.Text.Json
@using DfxConsole.BlazorUI.Components.Constants
@using DfxConsole.BlazorUI.Components.Pages.Features
@using DfxConsole.BlazorUI.Constants
@using DfxConsole.BlazorUI.Models
@using DfxConsole.BlazorUI.Services
@inject DurableFunctionService DurableFunctionService
@inject LocalStorageService LocalStorageService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer
@implements IAsyncDisposable

<PageTitle>Durable Functions Console</PageTitle>

<div class="container-fluid px-3 py-2">
    @if (_isReloading || !_configurationLoaded)
    {
        <div class="row g-3">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-center">
                            <div class="spinner-border text-primary me-3" role="status" style="width: 2rem; height: 2rem;">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1 fw-semibold">Loading Configuration</h6>
                                <p class="mb-0 text-muted small">Please wait while we load your settings...</p>
                            </div>
                        </div>
                        <div class="progress mt-3" style="height: 4px;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-primary"
                                 role="progressbar"
                                 style="width: 100%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row g-3">
            <div class="col-lg-6">
                <div class="card h-100 shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0"><i class="bi bi-gear-fill me-2"></i>CONFIGURATION</h6>
                        <button type="button"
                                class="btn btn-sm btn-outline-danger py-0 px-2"
                                @onclick="ClearConfiguration"
                                title="Clear all configuration">
                            <i class="bi bi-trash"></i> Clear
                        </button>
                    </div>
                    <div class="card-body py-2">
                        <div class="mb-2">
                            <label class="form-label mb-1 small">Function App URL <span class="text-danger">*</span></label>
                            <input type="text"
                                   class="form-control form-control-sm @(_durableFunctionConfigurationValidationError && string.IsNullOrWhiteSpace(_durableFunctionConfiguration.FunctionAppUrl) ? "is-invalid" : "")"
                                   value="@_durableFunctionConfiguration.FunctionAppUrl"
                                   @oninput="@(e => { _durableFunctionConfiguration.FunctionAppUrl = e.Value?.ToString() ?? string.Empty; OnConfigurationChanged(); })"
                                   placeholder="https://your-function-app.azurewebsites.net" />
                            @if (_durableFunctionConfigurationValidationError && string.IsNullOrWhiteSpace(_durableFunctionConfiguration.FunctionAppUrl))
                            {
                                <div class="invalid-feedback d-block">Function App URL is required.</div>
                            }
                        </div>
                        <div class="mb-2">
                            <label class="form-label mb-1 small">Auth Code (System Key) <span class="text-danger">*</span></label>
                            <input type="password"
                                   class="form-control form-control-sm @(_durableFunctionConfigurationValidationError && string.IsNullOrWhiteSpace(_durableFunctionConfiguration.AuthCode) ? "is-invalid" : "")"
                                   value="@_durableFunctionConfiguration.AuthCode"
                                   @oninput="@(e => { _durableFunctionConfiguration.AuthCode = e.Value?.ToString() ?? string.Empty; OnConfigurationChanged(); })"
                                   placeholder="Your system key" />
                            @if (_durableFunctionConfigurationValidationError && string.IsNullOrWhiteSpace(_durableFunctionConfiguration.AuthCode))
                            {
                                <div class="invalid-feedback d-block">Auth Code is required.</div>
                            }
                        </div>
                        <div class="mb-2">
                            <label class="form-label mb-1 small">Task Hub (Optional)</label>
                            <input type="text"
                                   class="form-control form-control-sm"
                                   value="@_durableFunctionConfiguration.TaskHub"
                                   @oninput="@(e => { _durableFunctionConfiguration.TaskHub = e.Value?.ToString() ?? string.Empty; OnConfigurationChanged(); })"
                                   placeholder="Default" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label mb-1 small">Connection Name (Optional)</label>
                            <input type="text"
                                   class="form-control form-control-sm"
                                   value="@_durableFunctionConfiguration.ConnectionName"
                                   @oninput="@(e => { _durableFunctionConfiguration.ConnectionName = e.Value?.ToString() ?? string.Empty; OnConfigurationChanged(); })"
                                   placeholder="Default" />
                        </div>

                        <div class="mb-0">
                            <label class="form-label mb-1 small d-flex justify-content-between align-items-center">
                                <span>Custom HTTP Headers (Optional)</span>
                                <button type="button" class="btn btn-sm btn-outline-primary py-0 px-2" @onclick="AddCustomHeader">
                                    <i class="bi bi-plus-circle"></i> Add
                                </button>
                            </label>
                            @if (_customHeadersList.Any())
                            {
                                <div class="custom-headers-container">
                                    @foreach (var header in _customHeadersList)
                                    {
                                        <div class="row g-1 mb-1">
                                            <div class="col-5">
                                                <input type="text"
                                                       class="form-control form-control-sm"
                                                       value="@header.Key"
                                                       @oninput="@(e => { header.Key = e.Value?.ToString() ?? string.Empty; UpdateCustomHeaders(); OnConfigurationChanged(); })"
                                                       placeholder="Header Name" />
                                            </div>
                                            <div class="col-6">
                                                <input type="text"
                                                       class="form-control form-control-sm"
                                                       value="@header.Value"
                                                       @oninput="@(e => { header.Value = e.Value?.ToString() ?? string.Empty; UpdateCustomHeaders(); OnConfigurationChanged(); })"
                                                       placeholder="Header Value" />
                                            </div>
                                            <div class="col-1">
                                                <button type="button"
                                                        class="btn btn-sm btn-outline-danger w-100 py-0"
                                                        @onclick="() => RemoveCustomHeader(header)">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            <small class="form-text text-muted d-block mt-1">
                                Common: <code>Authorization</code>, <code>Ocp-Apim-Subscription-Key</code>
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card h-100 shadow-sm">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="bi bi-list-task me-2"></i>OPERATION</h6>
                    </div>
                    <div class="card-body py-2">
                        <select class="form-select form-select-sm mb-2" @bind="SelectedOperation">
                            <optgroup label="Instance Operations">
                                <option value="@DurableOperation.GetInstances">Get Instances</option>
                                <option value="@DurableOperation.GetInstance">Get Instance</option>
                                <option value="@DurableOperation.TerminateInstance">Terminate Instance</option>
                                <option value="@DurableOperation.SuspendInstance">Suspend Instance</option>
                                <option value="@DurableOperation.ResumeInstance">Resume Instance</option>
                            </optgroup>
                            <optgroup label="Purge Operations">
                                <option value="@DurableOperation.PurgeInstance">Purge Instance History</option>
                                <option value="@DurableOperation.PurgeInstances">Purge Instance Histories</option>
                            </optgroup>
                            <optgroup label="Entity Operations">
                                <option value="@DurableOperation.GetEntities">Get Entities</option>
                                <option value="@DurableOperation.GetEntity">Get Entity</option>
                            </optgroup>
                        </select>

                        <div class="border-top pt-2">
                            <h6 class="mb-2 small fw-semibold">Parameters</h6>
                            @switch (_selectedOperation)
                            {
                                case DurableOperation.GetInstances:
                                    <GetInstancesParameters OnExecute="ExecuteGetInstances"
                                                            IsConfigValid="@(!string.IsNullOrWhiteSpace(_durableFunctionConfiguration.FunctionAppUrl) && !string.IsNullOrWhiteSpace(_durableFunctionConfiguration.AuthCode))" />
                                    break;
                                case DurableOperation.GetInstance:
                                    <GetInstanceParameters OnExecute="ExecuteGetInstance"
                                                           IsConfigValid="@(!string.IsNullOrWhiteSpace(_durableFunctionConfiguration.FunctionAppUrl) && !string.IsNullOrWhiteSpace(_durableFunctionConfiguration.AuthCode))" />
                                    break;
                                case DurableOperation.PurgeInstance:
                                    <PurgeInstanceParameters OnExecute="ExecutePurgeInstance"
                                                             IsConfigValid="@(!string.IsNullOrWhiteSpace(_durableFunctionConfiguration.FunctionAppUrl) && !string.IsNullOrWhiteSpace(_durableFunctionConfiguration.AuthCode))" />
                                    break;
                                case DurableOperation.PurgeInstances:
                                    <PurgeInstancesParameters OnExecute="ExecutePurgeInstances"
                                                              IsConfigValid="@(!string.IsNullOrWhiteSpace(_durableFunctionConfiguration.FunctionAppUrl) && !string.IsNullOrWhiteSpace(_durableFunctionConfiguration.AuthCode))" />
                                    break;
                                case DurableOperation.TerminateInstance:
                                    <TerminateInstanceParameters OnExecute="ExecuteTerminateInstance"
                                                                 IsConfigValid="@(!string.IsNullOrWhiteSpace(_durableFunctionConfiguration.FunctionAppUrl) && !string.IsNullOrWhiteSpace(_durableFunctionConfiguration.AuthCode))" />
                                    break;
                                case DurableOperation.SuspendInstance:
                                    <SuspendInstanceParameters OnExecute="ExecuteSuspendInstance"
                                                               IsConfigValid="@(!string.IsNullOrWhiteSpace(_durableFunctionConfiguration.FunctionAppUrl) && !string.IsNullOrWhiteSpace(_durableFunctionConfiguration.AuthCode))" />
                                    break;
                                case DurableOperation.ResumeInstance:
                                    <ResumeInstanceParameters OnExecute="ExecuteResumeInstance"
                                                              IsConfigValid="@(!string.IsNullOrWhiteSpace(_durableFunctionConfiguration.FunctionAppUrl) && !string.IsNullOrWhiteSpace(_durableFunctionConfiguration.AuthCode))" />
                                    break;
                                case DurableOperation.GetEntities:
                                    <GetEntitiesParameters OnExecute="ExecuteGetEntities"
                                                           IsConfigValid="@(!string.IsNullOrWhiteSpace(_durableFunctionConfiguration.FunctionAppUrl) && !string.IsNullOrWhiteSpace(_durableFunctionConfiguration.AuthCode))" />
                                    break;
                                case DurableOperation.GetEntity:
                                    <GetEntityParameters OnExecute="ExecuteGetEntity"
                                                         IsConfigValid="@(!string.IsNullOrWhiteSpace(_durableFunctionConfiguration.FunctionAppUrl) && !string.IsNullOrWhiteSpace(_durableFunctionConfiguration.AuthCode))" />
                                    break;
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (_isLoading)
        {
            <div class="row mt-3">
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body p-3">
                            <div class="d-flex align-items-center">
                                <div class="spinner-border text-primary me-3" role="status" style="width: 2rem; height: 2rem;">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1 fw-semibold">Processing Request</h6>
                                    <p class="mb-0 text-muted small">Please wait while we execute your operation...</p>
                                </div>
                            </div>
                            <div class="progress mt-3" style="height: 4px;">
                                <div class="progress-bar progress-bar-striped progress-bar-animated bg-primary"
                                     role="progressbar"
                                     style="width: 100%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="mt-3">
            <ResultsDisplay Result="@_result"
                            CanShowTableView="@_canShowTableView"
                            IsLoading="@_isLoading"
                            CurrentResultType="@_currentResultType"
                            Instances="@_instances"
                            Entities="@_entities"
                            SupportsPagination="@_supportsPagination"
                            HasPreviousPage="@_hasPreviousPage"
                            HasNextPage="@_hasNextPage"
                            CurrentPageIndex="@_currentPageIndex"
                            RowCount="@_rowCount"
                            OnLoadPreviousPage="LoadPreviousPage"
                            OnLoadNextPage="LoadNextPage" />
        </div>
    }
</div>

<style>
    .custom-headers-container {
        max-height: 180px;
        overflow-y: auto;
        padding: 0.375rem;
        background-color: #f8f9fa;
        border-radius: 0.25rem;
        margin-bottom: 0.25rem;
    }

    .progress-bar-animated {
        animation: progress-bar-stripes 1s linear infinite;
    }

    @@keyframes progress-bar-stripes {
        0% {
            background-position: 1rem 0;
        }

        100% {
            background-position: 0 0;
        }
    }
</style>

@code {
    private DurableFunctionConfiguration _durableFunctionConfiguration = new();
    private DurableOperation _selectedOperation = DurableOperation.GetInstances;
    private string _result = string.Empty;
    private bool _isLoading = false;
    private bool _isReloading = false;
    private bool _configurationLoaded = false;
    private bool _canShowTableView = false;
    private List<InstanceInfo> _instances = new();
    private List<EntityInfo> _entities = new();
    private bool _durableFunctionConfigurationValidationError = false;
    private ResultType _currentResultType = ResultType.Instance;
    private int? _rowCount = null;
    private Timer? _autoSaveTimer;
    private bool _firstRenderCompleted = false;

    // Custom headers management
    private List<CustomHeader> _customHeadersList = new();

    // Pagination support
    private bool _supportsPagination = false;
    private bool _hasNextPage = false;
    private bool _hasPreviousPage = false;
    private int _currentPageIndex = 0;
    private List<string?> _continuationTokens = new();
    private GetInstancesParameters.GetInstancesParams? _lastGetAllInstancesParams;
    private GetEntitiesParameters.GetEntitiesParams? _lastGetAllEntitiesParams;

    private class CustomHeader
    {
        public string Key { get; set; } = string.Empty;
        public string Value { get; set; } = string.Empty;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _firstRenderCompleted = true;

            await CheckAndHandleReloadFlag();

            if (!_isReloading)
            {
                await LoadConfiguration();
            }

            StateHasChanged();
        }
    }

    private async Task LoadConfiguration()
    {
        try
        {
            var savedConfig = await LocalStorageService.GetItemAsync<DurableFunctionConfiguration>(StorageKeys.DurableFunctionConfiguration);

            if (savedConfig != null)
            {
                _durableFunctionConfiguration = savedConfig;

                // Populate custom headers list from saved configuration
                if (_durableFunctionConfiguration.CustomHeaders?.Any() == true)
                {
                    _customHeadersList = _durableFunctionConfiguration.CustomHeaders
                        .Select(h => new CustomHeader { Key = h.Key, Value = h.Value })
                        .ToList();
                }
            }
        }
        finally
        {
            _configurationLoaded = true;
            StateHasChanged();
        }
    }

    private async Task CheckAndHandleReloadFlag()
    {
        var isHomePageNeedsReload = await JSRuntime.InvokeAsync<string?>("sessionStorage.getItem", StorageKeys.IsHomePageNeedsReload);

        if (!string.IsNullOrEmpty(isHomePageNeedsReload))
        {
            // IMPORTANT: Workaround: When a new tab is opened and from that, a monaco modal is opened, it's not getting styles
            // Forcing a page reload in such cases
            var isReloadRequired = JsonSerializer.Deserialize<bool>(isHomePageNeedsReload);

            if (isReloadRequired)
            {
                // Show loading indicator
                _isReloading = true;
                StateHasChanged();

                // Clear the flag first to prevent infinite reload loop
                await JSRuntime.InvokeVoidAsync("sessionStorage.removeItem", StorageKeys.IsHomePageNeedsReload);

                // Reload the page
                await JSRuntime.InvokeVoidAsync("location.reload");

                return; // Exit early since we're reloading
            }
        }

        // Only set _isReloading to false if we didn't trigger a reload
        _isReloading = false;
    }

    private async Task SaveConfiguration()
    {
        try
        {
            await LocalStorageService.SetItemAsync(StorageKeys.DurableFunctionConfiguration, _durableFunctionConfiguration);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving configuration: {ex.Message}");
        }
    }

    private async Task ClearConfiguration()
    {
        // Clear the in-memory configuration
        _durableFunctionConfiguration = new();
        _customHeadersList.Clear();

        // Clear validation errors
        _durableFunctionConfigurationValidationError = false;

        // Remove from local storage
        await LocalStorageService.RemoveItemAsync(StorageKeys.DurableFunctionConfiguration);

        // Cancel any pending auto-save
        _autoSaveTimer?.Dispose();

        // Force UI update
        StateHasChanged();
    }

    private void OnConfigurationChanged()
    {
        // Debounce auto-save: reset timer on each change
        _autoSaveTimer?.Dispose();
        _autoSaveTimer = new Timer(async _ =>
        {
            await SaveConfiguration();
        }, null, TimeSpan.FromSeconds(2), Timeout.InfiniteTimeSpan);
    }

    private DurableOperation SelectedOperation
    {
        get => _selectedOperation;
        set
        {
            if (_selectedOperation != value)
            {
                _selectedOperation = value;
                _result = string.Empty;
                _canShowTableView = false;
                _instances.Clear();
                _entities.Clear();
                _rowCount = null;
                ResetPagination();
            }
        }
    }

    private void AddCustomHeader()
    {
        _customHeadersList.Add(new CustomHeader());
    }

    private void RemoveCustomHeader(CustomHeader header)
    {
        _customHeadersList.Remove(header);
        UpdateCustomHeaders();
        OnConfigurationChanged();
    }

    private void UpdateCustomHeaders()
    {
        _durableFunctionConfiguration.CustomHeaders = _customHeadersList
            .Where(h => !string.IsNullOrWhiteSpace(h.Key) && !string.IsNullOrWhiteSpace(h.Value))
            .ToDictionary(h => h.Key.Trim(), h => h.Value.Trim());
    }

    private bool ValidateConfiguration()
    {
        _durableFunctionConfigurationValidationError = false;

        if (string.IsNullOrWhiteSpace(_durableFunctionConfiguration.FunctionAppUrl) || string.IsNullOrWhiteSpace(_durableFunctionConfiguration.AuthCode))
        {
            _durableFunctionConfigurationValidationError = true;
            return false;
        }

        return true;
    }

    private void ResetPagination()
    {
        _supportsPagination = false;
        _hasNextPage = false;
        _hasPreviousPage = false;
        _currentPageIndex = 0;
        _continuationTokens.Clear();
        _continuationTokens.Add(null);
        _rowCount = null;
    }

    private async Task LoadNextPage()
    {
        if (!_hasNextPage || _isLoading)
        {
            return;
        }

        _currentPageIndex++;

        if (_selectedOperation == DurableOperation.GetInstances && _lastGetAllInstancesParams != null)
        {
            var nextParams = _lastGetAllInstancesParams with
            {
                ContinuationToken = _continuationTokens[_currentPageIndex]
            };
            await ExecuteGetInstances(nextParams);
        }
        else if (_selectedOperation == DurableOperation.GetEntities && _lastGetAllEntitiesParams != null)
        {
            var nextParams = _lastGetAllEntitiesParams with
            {
                ContinuationToken = _continuationTokens[_currentPageIndex]
            };
            await ExecuteGetEntities(nextParams);
        }
    }

    private async Task LoadPreviousPage()
    {
        if (!_hasPreviousPage || _isLoading || _currentPageIndex == 0)
        {
            return;
        }

        _currentPageIndex--;

        if (_selectedOperation == DurableOperation.GetInstances && _lastGetAllInstancesParams != null)
        {
            var prevParams = _lastGetAllInstancesParams with
            {
                ContinuationToken = _continuationTokens[_currentPageIndex]
            };
            await ExecuteGetInstances(prevParams);
        }
        else if (_selectedOperation == DurableOperation.GetEntities && _lastGetAllEntitiesParams != null)
        {
            var prevParams = _lastGetAllEntitiesParams with
            {
                ContinuationToken = _continuationTokens[_currentPageIndex]
            };
            await ExecuteGetEntities(prevParams);
        }
    }

    private void ProcessInstancePagedResult(PagedResponse<List<InstanceInfo>> pagedResponse)
    {
        _currentResultType = ResultType.Instance;
        _supportsPagination = true;
        _canShowTableView = pagedResponse.Data?.Any() == true;
        _instances = pagedResponse.Data ?? new List<InstanceInfo>();
        _entities.Clear();
        _rowCount = pagedResponse.RowCount;

        _result = JsonSerializer.Serialize(pagedResponse.Data, new JsonSerializerOptions
        {
            WriteIndented = true,
            PropertyNamingPolicy = JsonNamingPolicy.CamelCase
        });

        _hasNextPage = pagedResponse.HasMoreResults;
        _hasPreviousPage = _currentPageIndex > 0;

        if (pagedResponse.HasMoreResults && !string.IsNullOrEmpty(pagedResponse.ContinuationToken))
        {
            if (_continuationTokens.Count <= _currentPageIndex + 1)
            {
                _continuationTokens.Add(pagedResponse.ContinuationToken);
            }
        }
    }

    private void ProcessEntityPagedResult(PagedResponse<List<EntityInfo>> pagedResponse)
    {
        _currentResultType = ResultType.Entity;
        _supportsPagination = true;
        _canShowTableView = pagedResponse.Data?.Any() == true;
        _entities = pagedResponse.Data ?? new List<EntityInfo>();
        _instances.Clear();
        _rowCount = pagedResponse.RowCount;

        _result = JsonSerializer.Serialize(pagedResponse.Data, new JsonSerializerOptions
        {
            WriteIndented = true,
            PropertyNamingPolicy = JsonNamingPolicy.CamelCase
        });

        _hasNextPage = pagedResponse.HasMoreResults;
        _hasPreviousPage = _currentPageIndex > 0;

        if (pagedResponse.HasMoreResults && !string.IsNullOrEmpty(pagedResponse.ContinuationToken))
        {
            if (_continuationTokens.Count <= _currentPageIndex + 1)
            {
                _continuationTokens.Add(pagedResponse.ContinuationToken);
            }
        }
    }

    private void ProcessInstanceResult(InstanceInfo? instance)
    {
        _currentResultType = ResultType.Instance;
        _supportsPagination = false;

        if (instance != null)
        {
            _canShowTableView = true;
            _instances = new List<InstanceInfo> { instance };
            _entities.Clear();
            _rowCount = 1;
            _result = JsonSerializer.Serialize(instance, new JsonSerializerOptions
            {
                WriteIndented = true,
                PropertyNamingPolicy = JsonNamingPolicy.CamelCase
            });
        }
        else
        {
            _canShowTableView = false;
            _instances.Clear();
            _rowCount = null;
            _result = "No data returned";
        }
    }

    private void ProcessStringResult(string result)
    {
        _result = result;
        _canShowTableView = false;
        _supportsPagination = false;
        _instances.Clear();
        _entities.Clear();
        _rowCount = null;
    }

    private async Task ExecuteGetInstances(GetInstancesParameters.GetInstancesParams parameters)
    {
        if (!ValidateConfiguration())
        {
            StateHasChanged();
            return;
        }

        _isLoading = true;
        _result = string.Empty;

        if (parameters.ContinuationToken == null)
        {
            ResetPagination();
        }

        _lastGetAllInstancesParams = parameters;
        StateHasChanged();

        try
        {
            PagedResponse<List<InstanceInfo>> pagedResponse = await DurableFunctionService.GetInstancesAsync(
                _durableFunctionConfiguration,
                parameters.CreatedTimeFrom,
                parameters.CreatedTimeTo,
                parameters.RuntimeStatus,
                parameters.InstanceIdPrefix,
                parameters.ShowInput,
                parameters.Top,
                parameters.ContinuationToken);

            ProcessInstancePagedResult(pagedResponse);
        }
        catch (HttpRequestException ex)
        {
            _result = JsonSerializer.Serialize(new
            {
                statusCode = ex.StatusCode,
                message = ex.Message
            }, new JsonSerializerOptions
            {
                WriteIndented = true,
                PropertyNamingPolicy = JsonNamingPolicy.CamelCase
            });

            ProcessStringResult(_result);
        }

        _isLoading = false;
    }

    private async Task ExecuteGetInstance(GetInstanceParameters.GetInstanceParams parameters)
    {
        if (!ValidateConfiguration())
        {
            StateHasChanged();
            return;
        }

        _isLoading = true;
        _result = string.Empty;
        ResetPagination();
        StateHasChanged();

        try
        {
            var result = await DurableFunctionService.GetInstanceAsync(
                _durableFunctionConfiguration,
                parameters.InstanceId,
                parameters.ShowHistory,
                parameters.ShowHistoryOutput,
                parameters.ShowInput,
                parameters.ReturnInternalServerErrorOnFailure);

            ProcessInstanceResult(result);
        }
        catch (HttpRequestException ex)
        {
            _result = JsonSerializer.Serialize(new
            {
                statusCode = ex.StatusCode,
                message = ex.Message
            }, new JsonSerializerOptions
            {
                WriteIndented = true,
                PropertyNamingPolicy = JsonNamingPolicy.CamelCase
            });

            ProcessStringResult(_result);
        }

        _isLoading = false;
    }

    private async Task ExecutePurgeInstance(string instanceId)
    {
        if (!ValidateConfiguration())
        {
            StateHasChanged();
            return;
        }

        _isLoading = true;
        _result = string.Empty;
        ResetPagination();
        StateHasChanged();

        try
        {
            var result = await DurableFunctionService.PurgeInstanceAsync(_durableFunctionConfiguration, instanceId);
            ProcessStringResult(result);
        }
        catch (HttpRequestException ex)
        {
            _result = JsonSerializer.Serialize(new
            {
                statusCode = ex.StatusCode,
                message = ex.Message
            }, new JsonSerializerOptions
            {
                WriteIndented = true,
                PropertyNamingPolicy = JsonNamingPolicy.CamelCase
            });

            ProcessStringResult(_result);
        }

        _isLoading = false;
    }

    private async Task ExecutePurgeInstances(PurgeInstancesParameters.PurgeInstancesParams parameters)
    {
        if (!ValidateConfiguration())
        {
            StateHasChanged();
            return;
        }

        _isLoading = true;
        _result = string.Empty;
        ResetPagination();
        StateHasChanged();

        try
        {
            var result = await DurableFunctionService.PurgeInstancesAsync(
                _durableFunctionConfiguration,
                parameters.CreatedTimeFrom,
                parameters.CreatedTimeTo,
                parameters.RuntimeStatus);

            ProcessStringResult(result);
        }
